<Window x:Name="PaintWindow" 
    x:Class="Paint.MainWindow" KeyDown = "canvas_KeyDown"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paint"
        mc:Ignorable="d"
        Title="MainWindow" Height="578" Width="1137">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF191B42" Offset="0"/>
            <GradientStop Color="#FFA0A5FF" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid >



        <InkCanvas x:Name="MyCanvas" Grid.Row="2" Background="White" EditingMode="None"
              
               MouseMove="Window_MouseMove" MouseLeftButtonDown="Window_MouseLeftbuttonDown" MouseLeftButtonUp="Window_MouseLeftButtonUp" Margin="362,34,50,34" >


        </InkCanvas>


        <Border BorderBrush="DarkSalmon"
                Background="White" 
                BorderThickness="2"
                CornerRadius="6"
                Height="542"
                Width ="208"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10,0,0,0"
                
                >




        </Border>


        <StackPanel HorizontalAlignment="Left"  Margin="20,34,0,480" Width="169">
            <Button x:Name="Save" Content="Save" Click="SaveButton_Click"/>


        </StackPanel>
        <StackPanel HorizontalAlignment="Left"  Margin="20,74,0,349">
            <GroupBox Height="26" Header="Режим" HorizontalAlignment="Left" BorderBrush="DarkSlateBlue" Width="122" />
            <RadioButton x:Name="CursorB" Content="Курсор" Checked="Mode_Checked"/>
            <RadioButton x:Name="PaintB" Content="Рисование" Checked="Mode_Checked"/>

            <RadioButton x:Name="RectangleB" Content="Прямоугольник" Checked="Mode_Checked"/>
            <RadioButton x:Name="CircleB" Content="Круг" Checked="Mode_Checked"/>
            <RadioButton x:Name="OvalB" Content="Овал" Checked="Mode_Checked"/>
            <RadioButton x:Name="EaraseB" Content="Ластик" Checked="Mode_Checked"/>
            <RadioButton x:Name="BackB" Content="назад" Checked="Mode_Checked"/>

        </StackPanel>

        <Label
            Content="Толщина кисти" HorizontalAlignment="Left" Margin="34,213,0,0" VerticalAlignment="Top" Height="23"/>
        <Label x:Name="ColorFill" Content="" HorizontalAlignment="Left" Margin="174,299,0,0" VerticalAlignment="Top" FontSize="14" Width="21" Height="19"/>
        <Label x:Name="ColorContur" Content="" HorizontalAlignment="Left" Margin="174,320,0,0" VerticalAlignment="Top" FontSize="14" Width="21" Height="18"/>

        <Slider x:Name="BrushSlider" HorizontalAlignment="Left" Margin="21,233,0,0" VerticalAlignment="Top" Height="23" Minimum="1" Maximum="50" 
                ValueChanged="Slider_value_Stroke" Value="1" SmallChange="0.5" Width="148" Cursor="Hand"/>
        <TextBox HorizontalAlignment="Left" Margin="174,233,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="30" Height="16" 
                 Text="{Binding  ElementName=BrushSlider, Path= Value, StringFormat=0 ,ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <Label x:Name="lbl1"
               Content="Выбранный цвет" HorizontalAlignment="Left" Margin="21,270,0,0" VerticalAlignment="Top" FontSize="14" Width="145"/>
        <StackPanel HorizontalAlignment="Left"  Margin="21,299,0,179" Width="148">
            <Button x:Name="ColorFillingButton" Content="Цвет Заливки" Click="ColorButton_Click"/>
            <Button x:Name="ColorLinesButton" Content="Цвет линии" Click="ColorButton_Click"/>


        </StackPanel>
    </Grid>

</Window>

